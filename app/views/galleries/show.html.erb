<h1><%= @gallery.name %></h1>

<p><%= @gallery.description %></p>

<%= link_to "Add Image", new_gallery_image_path(@gallery) %>

<%= link_to "Edit", "/galleries/#{@gallery.id}/edit" %>
<%= link_to "Destroy", "/galleries/#{@gallery.id}", method: :delete, data: { confirm: "Are you sure?" } %>

<% @gallery.images.each do |image| %>
  <div>
    <%= image_tag image.url, width: 200 %>
    <%= link_to image.name, [@gallery, image] %>
  </div>
<% end %>
